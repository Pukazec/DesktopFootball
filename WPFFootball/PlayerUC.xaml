<UserControl x:Class="WPFFootball.PlayerUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFFootball"
             mc:Ignorable="d" 
             Height="85" MinWidth="80">
    <UserControl.Resources>
        <Style TargetType="{x:Type Label}">
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    <Grid Margin="3">
        <StackPanel Background="Transparent" Orientation="Vertical">
            <Image x:Name="imgPlayer" Margin="3" Height="35" Source="/NoIcon.png"/>
            <Label x:Name="lblName" FontSize="10" Content="Player name"/>
            <Label x:Name="lblNumber" FontSize="15" Content="Shirt num"/>
        </StackPanel>
    </Grid>
</UserControl>
